        const simulatePayment = (planName, price) => {
            // Em um app real, este link levaria para Stripe, PayPal, Mercado Pago, etc.
            // Aqui, simulamos a atualização do plano após um pagamento bem-sucedido
            showModal("Pagamento Simulado", `Você seria redirecionado para pagar ${price} pelo ${planName}. Após o pagamento, seu plano será ativado.`);
            // Simulação de ativação:
            if (!userProfile.currentPlan || userProfile.currentPlan !== planName) {
                userProfile.currentPlan = planName;
                saveProfile(); // Save the new plan status to Firestore
            }
        };

        const simulateAILook = async () => {
            const prompt = document.getElementById('look-prompt').value;
            const imageUrl = document.getElementById('look-image-url').value; // Usado apenas para contexto visual
            const resultDiv = document.getElementById('ai-look-result');
            const spinner = document.getElementById('look-spinner');

            if (!prompt) {
                showModal("Atenção", "Por favor, descreva a peça de roupa principal para a IA.");
                return;
            }

            // Exibir o spinner
            spinner.classList.remove('hidden');
            resultDiv.innerHTML = `<div class="text-center p-10">
                <div class="spinner border-4 border-gray-200 rounded-full w-8 h-8 inline-block"></div>
                <p class="mt-2 text-gray-500 text-sm">A Aura está criando seu look...</p>
            </div>`;

            // Construir o System Prompt de Luxo para a IA
            const systemPrompt = `Você é um estilista de luxo e consultor de beleza pessoal (designer de R$50.000,00). Sua missão é fornecer uma análise detalhada e dicas de estilo (roupa e cabelo) para o "Look do Dia" de uma cliente.
            Use o seguinte perfil da cliente:
            - Altura: ${userProfile.altura} cm
            - Medidas: Busto ${userProfile.medidas.busto}cm, Cintura ${userProfile.medidas.cintura}cm, Quadril ${userProfile.medidas.quadril}cm
            - Etnia: ${ETHNICITIES.find(e => e.value === userProfile.etnia)?.label || userProfile.etnia}
            - Tipo de Cabelo: ${userProfile.cabelo}

            A cliente descreveu a peça de roupa principal como: "${prompt}".

            Gere a resposta em formato Markdown com estas seções:
            1. Análise da Peça: Comente sobre a peça escolhida (ex: cor, corte, caimento).
            2. Dicas de Complementos (Roupa e Acessórios): Sugira 3 a 5 peças ou acessórios que harmonizem com a peça principal, considerando a altura e as medidas para otimizar a silhueta.
            3. Sugestão de Penteado: Sugira 1 a 2 penteados que complementem o look e que sejam adequados para o Tipo de Cabelo da cliente.
            Mantenha um tom sofisticado, elegante e motivador.`;

            // Query do Usuário (O que a cliente quer que a IA analise)
            const userQuery = `Minha peça de roupa é: ${prompt}. Por favor, crie meu Look do Dia!`;
            
            // Simulação da Chamada à Gemini API (com Google Search para contexto de moda atual)
            const apiKey = "" // O Canvas fornecerá esta chave.
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;

            const payload = {
                contents: [{ parts: [{ text: userQuery }] }],
                tools: [{ "google_search": {} }],
                systemInstruction: { parts: [{ text: systemPrompt }] },
            };

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (!response.ok) {
                    throw new Error(`Erro HTTP: ${response.status}`);
                }

                const result = await response.json();
                const aiText = result.candidates?.[0]?.content?.parts?.[0]?.text || "Desculpe, a IA não conseguiu gerar o look. Tente reformular o pedido.";
                
                // Formatar o resultado para exibição (usando um placeholder simples)
                const formattedResult = aiText.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>') // Negrito
                                              .replace(/\n\n/g, '<br><br>') // Parágrafos
                                              .replace(/\n/g, '<br>'); // Quebras de linha simples

                resultDiv.innerHTML = `<div class="p-4 bg-white rounded-lg shadow-md border-l-4 border-violet-500">${formattedResult}</div>`;
                
            } catch (error) {
                console.error("Erro na chamada da IA (Look do Dia):", error);
                resultDiv.innerHTML = `<div class="p-4 text-red-700 bg-red-100 border-l-4 border-red-500 rounded-lg">
                    <p class="font-bold">Erro ao processar a IA:</p>
                    <p class="text-sm">Não foi possível conectar ao serviço de estilismo. Verifique sua conexão. (Erro: ${error.message})</p>
                </div>`;
            } finally {
                // Esconder o spinner
                spinner.classList.add('hidden');
            }

        };

        // --- Inicialização do App ---
        
        // CORREÇÃO: Torna funções globais para que os atributos onclick no HTML possam acessá-las
        window.navigate = navigate;
        window.closeModal = closeModal;
        window.toggleMobileDrawer = toggleMobileDrawer;
        window.simulatePayment = simulatePayment;
        
        window.onload = initFirebase;
        lucide.createIcons(); // Inicializa ícones na primeira carga
    </script>
</body>
</html>
