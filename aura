<body class="min-h-screen flex flex-col">

    <!-- A TELA DE LOGIN FOI REMOVIDA. O APP INICIA DIRETAMENTE. -->

    <!-- Navbar Fixa e Luxuosa (AGORA VISÍVEL POR DEFAULT) -->
    <nav class="bg-white shadow-lg p-4 sticky top-0 z-10" id="app-navbar">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <h1 class="luxury-header text-2xl font-bold">Aura & Essencia</h1>
            <div id="nav-menu" class="hidden md:flex space-x-6">
                <!-- Botões de navegação estilizados -->
                <button onclick="navigate('profile')" class="text-gray-700 hover:text-indigo-600 transition duration-150 flex items-center"><i data-lucide="user" class="w-5 h-5 mr-1"></i>Meu Perfil</button>
                <button onclick="navigate('tips')" class="text-gray-700 hover:text-indigo-600 transition duration-150 flex items-center"><i data-lucide="sparkles" class="w-5 h-5 mr-1"></i>Dicas Diárias</button>
                <button onclick="navigate('evolution')" class="text-gray-700 hover:text-indigo-600 transition duration-150 flex items-center"><i data-lucide="trending-up" class="w-5 h-5 mr-1"></i>Evolução</button>
                <button onclick="navigate('look')" class="text-gray-700 hover:text-indigo-600 transition duration-150 flex items-center"><i data-lucide="gem" class="w-5 h-5 mr-1"></i>Look do Dia (Aura)</button>
                <button onclick="navigate('plans')" class="text-gray-700 hover:text-indigo-600 transition duration-150 flex items-center"><i data-lucide="credit-card" class="w-5 h-5 mr-1"></i>Planos</button>
            </div>
            <!-- Botão de Menu para Mobile -->
            <button id="menu-toggle" class="md:hidden text-gray-700">
                <i data-lucide="menu" class="w-6 h-6"></i>
            </button>
        </div>
    </nav>

    <!-- Mobile Navigation Drawer (Escondida por default) -->
    <div id="mobile-drawer" class="fixed inset-0 bg-white z-20 transform -translate-x-full transition-transform duration-300 md:hidden">
        <div class="flex justify-end p-4">
            <button id="close-drawer" class="text-gray-700">
                <i data-lucide="x" class="w-6 h-6"></i>
            </button>
        </div>
        <div class="flex flex-col space-y-4 p-6">
            <button onclick="navigate('profile'); toggleMobileDrawer(false);" class="text-lg text-gray-700 hover:text-indigo-600 flex items-center"><i data-lucide="user" class="w-5 h-5 mr-2"></i>Meu Perfil</button>
            <button onclick="navigate('tips'); toggleMobileDrawer(false);" class="text-lg text-gray-700 hover:text-indigo-600 flex items-center"><i data-lucide="sparkles" class="w-5 h-5 mr-2"></i>Dicas Diárias</button>
            <button onclick="navigate('evolution'); toggleMobileDrawer(false);" class="text-lg text-gray-700 hover:text-indigo-600 flex items-center"><i data-lucide="trending-up" class="w-5 h-5 mr-2"></i>Evolução</button>
            <button onclick="navigate('look'); toggleMobileDrawer(false);" class="text-lg text-gray-700 hover:text-indigo-600 flex items-center"><i data-lucide="gem" class="w-5 h-5 mr-2"></i>Look do Dia (Aura)</button>
            <button onclick="navigate('plans'); toggleMobileDrawer(false);" class="text-lg text-gray-700 hover:text-indigo-600 flex items-center"><i data-lucide="credit-card" class="w-5 h-5 mr-2"></i>Planos</button>
        </div>
    </div>


    <!-- Conteúdo Principal - Centralizado e com Padding Generoso (AGORA VISÍVEL POR DEFAULT) -->
    <main class="flex-grow max-w-7xl mx-auto p-4 md:p-8 w-full" id="app-main">
        <div id="content-container" class="bg-white p-6 md:p-10 rounded-xl shadow-2xl border-t-4 border-violet-700/50">
            <!-- Conteúdo será injetado aqui pelo JavaScript -->
        </div>
    </main>

    <!-- Modal de Mensagem (Simula alert/confirm) -->
    <div id="message-modal" class="fixed inset-0 bg-gray-900 bg-opacity-75 z-50 flex items-center justify-center hidden">
        <div class="bg-white p-6 rounded-lg shadow-2xl max-w-sm w-full">
            <h3 id="modal-title" class="luxury-header text-xl font-bold mb-3 text-violet-800">Mensagem</h3>
            <p id="modal-body" class="mb-4 text-gray-600"></p>
            <button onclick="closeModal()" class="w-full btn-primary text-white py-2 rounded-lg font-semibold">Entendido</button>
        </div>
    </div>

    <!-- Scripts de Firebase e Lógica do App -->
    <script type="module">
        // Importações do Firebase
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        // CORRIGIDO: Adicionado signInWithCustomToken para resolver o ReferenceError
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, setDoc, onSnapshot, collection, query, addDoc, serverTimestamp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        import { setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // Global Variables MUST BE USED
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-aura-essencia-app-id';
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : {}; 
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

        let app, db, auth, userId = null;
        let isAuthReady = false;

        // Configuração do Log do Firestore
        setLogLevel('Debug');

        // --- Funções de Login/Cadastro de Tela (REMOVIDAS, MANTENDO APENAS LÓGICA DE INICIALIZAÇÃO) ---

        // Inicialização do Firebase e Autenticação (SIMPLIFICADA)
        const initFirebase = async () => {
            try {
                // 1. Initialize App
                app = initializeApp(firebaseConfig);
                db = getFirestore(app);
                auth = getAuth(app);
                
                // 2. Auth Listener
                onAuthStateChanged(auth, async (user) => {
                    if (user) {
                        userId = user.uid;
                        isAuthReady = true;
                        console.log("Usuário autenticado (anônimo):", userId); 
                        // Carrega o perfil e navega para a página inicial (perfil)
                        await loadUserProfile(); 
                        navigate('profile', false);
                    } else {
                        // Se não houver usuário autenticado, força o login anônimo
                        isAuthReady = true; // Permite o carregamento da tela
                        
                        if (initialAuthToken) {
                            try {
                                await signInWithCustomToken(auth, initialAuthToken);
                            } catch (error) {
                                console.error("Erro durante o login com token, tentando anônimo:", error);
                                await signInAnonymously(auth); 
                            }
                        } else {
                            // Tenta imediatamente o login anônimo
                            await signInAnonymously(auth);
                        }
                    }
                });
            } catch (error) {
                console.error("Erro na inicialização do Firebase:", error);
                showModal("Erro Fatal", "Não foi possível inicializar o Firebase. Verifique a configuração.");
                isAuthReady = true;
            }
        };

        // NOTA: As funções showLogin, showSignup, handleLogin, handleSignup, signInAnon foram removidas.

        
        // --- Variáveis de Estado do App ---
        let currentPage = 'profile';
        let userProfile = {
            name: '',
            etnia: 'pardo', // Default pardo
            pele: 'Normal', // Default Normal
            cabelo: 'Ondulado', // Default Ondulado
            altura: '', // Altura em cm
            medidas: { busto: '', cintura: '', quadril: '' },
            currentPlan: 'Gratuito'
        };

        const ETHNICITIES = [
            { label: 'Branco', value: 'branco' },
            { label: 'Preto', value: 'preto' },
            { label: 'Pardo', value: 'pardo' },
            { label: 'Indígena', value: 'indigena' },
            { label: 'Amarelo', value: 'amarelo' }
        ];

        const SKIN_TYPES = ['Normal', 'Seca', 'Oleosa', 'Mista', 'Sensível'];
        const HAIR_TYPES = ['Liso', 'Ondulado', 'Cacheado', 'Crespo'];
        let dailyEvolutionData = []; // Data for tracking

        // --- Funções de UI ---

        const showModal = (title, body) => {
            document.getElementById('modal-title').textContent = title;
            document.getElementById('modal-body').textContent = body;
            document.getElementById('message-modal').classList.remove('hidden');
        };

        const closeModal = () => {
            document.getElementById('message-modal').classList.add('hidden');
        };

        const toggleMobileDrawer = (open) => {
            const drawer = document.getElementById('mobile-drawer');
            if (open) {
                drawer.classList.remove('-translate-x-full');
            } else {
                drawer.classList.add('-translate-x-full');
            }
        };

        document.getElementById('menu-toggle').addEventListener('click', () => toggleMobileDrawer(true));
        document.getElementById('close-drawer').addEventListener('click', () => toggleMobileDrawer(false));


        // --- Funções de Firestore ---

        const getProfileDocRef = () => {
            if (!userId) throw new Error("Usuário não autenticado.");
            // Private path: /artifacts/{appId}/users/{userId}/profile/user_data
            return doc(db, `artifacts/${appId}/users/${userId}/profile`, 'user_data');
        };

        const getEvolutionCollectionRef = () => {
            if (!userId) throw new Error("Usuário não autenticado.");
            // Private path: /artifacts/{appId}/users/{userId}/evolution
            return collection(db, `artifacts/${appId}/users/${userId}/evolution`);
        };

        const loadUserProfile = () => {
             // Attach real-time listener for the profile document
             if (!isAuthReady || !userId) return;

             try {
                const profileRef = getProfileDocRef();
                onSnapshot(profileRef, (docSnap) => {
                    if (docSnap.exists()) {
                        const data = docSnap.data();
                        userProfile = {
                            ...userProfile,
                            ...data,
                            medidas: data.medidas || { busto: '', cintura: '', quadril: '' }
                        };
                        renderPage(currentPage); // Re-render the current page with new data
                        console.log("Perfil carregado com sucesso.");
                    } else {
                        console.log("Documento de perfil não encontrado. Usando defaults.");
                    }
                }, (error) => {
                    console.error("Erro ao carregar o perfil em tempo real:", error);
                });
             } catch (e) {
                console.error("Erro ao configurar listener do perfil:", e);
             }
        };

        const saveProfile = async () => {
            if (!isAuthReady || !userId) {
                showModal("Erro de Autenticação", "Por favor, aguarde o login ou tente novamente.");
                return;
            }

            // Get data from form inputs
            const profileData = {
                name: document.getElementById('profile-name').value,
                etnia: document.getElementById('profile-etnia').value,
                pele: document.getElementById('profile-pele').value,
                cabelo: document.getElementById('profile-cabelo').value,
                altura: parseInt(document.getElementById('profile-altura').value) || null,
                medidas: {
                    busto: parseInt(document.getElementById('profile-busto').value) || null,
                    cintura: parseInt(document.getElementById('profile-cintura').value) || null,
                    quadril: parseInt(document.getElementById('profile-quadril').value) || null,
                },
                currentPlan: userProfile.currentPlan
            };

            // Update local state and save to Firestore
            userProfile = { ...userProfile, ...profileData };

            try {
                const profileRef = getProfileDocRef();
                await setDoc(profileRef, userProfile, { merge: true });
                showModal("Sucesso!", "Seu perfil foi atualizado com sucesso!");
                renderPage('profile');
            } catch (e) {
                console.error("Erro ao salvar o perfil:", e);
                showModal("Erro ao Salvar", "Ocorreu um erro ao salvar seus dados. Tente novamente.");
            }
        };

        const loadDailyEvolution = () => {
            if (!isAuthReady || !userId) return;

            try {
                const evolutionRef = getEvolutionCollectionRef();
                const q = query(evolutionRef); // No orderBy to avoid index issues.

                onSnapshot(q, (snapshot) => {
                    const data = [];
                    snapshot.forEach(doc => {
                        data.push({ id: doc.id, ...doc.data() });
                    });
                    // Sort data by date in memory (most recent first)
                    dailyEvolutionData = data.sort((a, b) => b.timestamp.toMillis() - a.timestamp.toMillis());
                    renderPage(currentPage);
                }, (error) => {
                    console.error("Erro ao carregar evolução diária em tempo real:", error);
                });
            } catch (e) {
                console.error("Erro ao configurar listener de evolução:", e);
            }
        };

        const addDailyEvolution = async () => {
            if (!isAuthReady || !userId) {
                showModal("Erro", "Usuário não autenticado. Por favor, aguarde o carregamento.");
                return;
            }

            const skinQuality = document.getElementById('skin-quality').value;
            const hairQuality = document.getElementById('hair-quality').value;
            const notes = document.getElementById('daily-notes').value;

            const entry = {
                skinQuality: skinQuality,
                hairQuality: hairQuality,
                notes: notes,
                timestamp: serverTimestamp()
            };

            try {
                await addDoc(getEvolutionCollectionRef(), entry);
                showModal("Registro Adicionado", "Seu progresso diário foi salvo!");
                // Clear form
                document.getElementById('skin-quality').value = '3';
                document.getElementById('hair-quality').value = '3';
                document.getElementById('daily-notes').value = '';
            } catch (e) {
                console.error("Erro ao adicionar registro diário:", e);
                showModal("Erro", "Falha ao salvar o registro diário.");
            }
        };

        // --- Funções de Navegação e Renderização ---

        const navigate = (page, runLoaders = true) => {
            currentPage = page;
            renderPage(page, runLoaders);
            // Re-render Lucide icons on page change
            lucide.createIcons();
        };

        const renderPage = (page, runLoaders = true) => {
            const container = document.getElementById('content-container');
            container.innerHTML = `<h2 class="luxury-header text-3xl font-bold mb-6 text-violet-800">Carregando...</h2>`;

            if (!isAuthReady) {
                container.innerHTML = `<div class="text-center p-10">
                    <div class="spinner border-4 border-gray-200 rounded-full w-10 h-10 inline-block"></div>
                    <p class="mt-4 text-gray-500">Aguardando autenticação e carregamento de dados...</p>
                </div>`;
                return;
            }

            switch (page) {
                case 'profile':
                    container.innerHTML = renderProfilePage();
                    // Attach event listener for saving
                    document.getElementById('save-profile-btn').addEventListener('click', saveProfile);
                    break;
                case 'tips':
                    container.innerHTML = renderTipsPage();
                    break;
                case 'evolution':
                    container.innerHTML = renderEvolutionPage();
                    if (runLoaders) loadDailyEvolution();
                    // Attach event listener for adding daily entry
                    document.getElementById('add-daily-entry-btn')?.addEventListener('click', addDailyEvolution);
                    
                    // NEW: Attach listeners for range slider updates
                    const skinRange = document.getElementById('skin-quality');
                    const skinValue = document.getElementById('skin-value');
                    if (skinRange && skinValue) {
                        skinRange.oninput = (e) => skinValue.textContent = e.target.value;
                    }
                    
                    const hairRange = document.getElementById('hair-quality');
                    const hairValue = document.getElementById('hair-value');
                    if (hairRange && hairValue) {
                        hairRange.oninput = (e) => hairValue.textContent = e.target.value;
                    }

                    break;
                case 'look':
                    container.innerHTML = renderLookDoDiaPage();
                    document.getElementById('generate-look-btn')?.addEventListener('click', simulateAILook);
                    break;
                case 'plans':
                    container.innerHTML = renderPlansPage();
                    break;
                default:
                    container.innerHTML = `<h2 class="luxury-header text-3xl font-bold mb-6 text-violet-800">Página Não Encontrada</h2>`;
            }

            // Ensure Lucide icons are rendered after HTML injection
            lucide.createIcons();
        };

        // --- Renderização de Páginas ---

        const renderProfilePage = () => {
            const u = userProfile;
            return `
                <h2 class="luxury-header text-3xl font-bold mb-8 text-violet-800">Meu Perfil</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <!-- Detalhes Pessoais -->
                    <div class="bg-gray-50 p-6 rounded-xl shadow-inner">
                        <h3 class="font-semibold text-lg mb-4 text-violet-700">Informações Pessoais</h3>
                        <div class="mb-4">
                            <label for="profile-name" class="block text-sm font-medium text-gray-700">Nome Completo</label>
                            <input type="text" id="profile-name" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-violet-500 focus:ring-violet-500 p-2" value="${u.name}">
                        </div>
                        <div class="mb-4">
                            <label for="profile-etnia" class="block text-sm font-medium text-gray-700">Etnia</label>
                            <select id="profile-etnia" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-violet-500 focus:ring-violet-500 p-2">
                                ${ETHNICITIES.map(e => `<option value="${e.value}" ${u.etnia === e.value ? 'selected' : ''}>${e.label}</option>`).join('')}
                            </select>
                        </div>
                        <div class="mb-4">
                            <label for="profile-altura" class="block text-sm font-medium text-gray-700">Altura (cm)</label>
                            <input type="number" id="profile-altura" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-violet-500 focus:ring-violet-500 p-2" placeholder="Ex: 165" value="${u.altura || ''}">
                        </div>
                    </div>

                    <!-- Tipo de Beleza -->
                    <div class="bg-gray-50 p-6 rounded-xl shadow-inner">
                        <h3 class="font-semibold text-lg mb-4 text-violet-700">Tipos de Beleza</h3>
                        <div class="mb-4">
                            <label for="profile-pele" class="block text-sm font-medium text-gray-700">Tipo de Pele</label>
                            <select id="profile-pele" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-violet-500 focus:ring-violet-500 p-2">
                                ${SKIN_TYPES.map(t => `<option value="${t}" ${u.pele === t ? 'selected' : ''}>${t}</option>`).join('')}
                            </select>
                        </div>
                        <div class="mb-4">
                            <label for="profile-cabelo" class="block text-sm font-medium text-gray-700">Tipo de Cabelo</label>
                            <select id="profile-cabelo" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-violet-500 focus:ring-violet-500 p-2">
                                ${HAIR_TYPES.map(t => `<option value="${t}" ${u.cabelo === t ? 'selected' : ''}>${t}</option>`).join('')}
                            </select>
                        </div>
                    </div>

                    <!-- Medidas (Para o Look do Dia) -->
                    <div class="md:col-span-2 bg-gray-50 p-6 rounded-xl shadow-inner">
                        <h3 class="font-semibold text-lg mb-4 text-violet-700">Medidas do Corpo (cm)</h3>
                        <div class="grid grid-cols-3 gap-4">
                            <div>
                                <label for="profile-busto" class="block text-sm font-medium text-gray-700">Busto</label>
                                <input type="number" id="profile-busto" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-violet-500 focus:ring-violet-500 p-2" placeholder="Ex: 90" value="${u.medidas.busto || ''}">
                            </div>
                            <div>
                                <label for="profile-cintura" class="block text-sm font-medium text-gray-700">Cintura</label>
                                <input type="number" id="profile-cintura" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-violet-500 focus:ring-violet-500 p-2" placeholder="Ex: 65" value="${u.medidas.cintura || ''}">
                            </div>
                            <div>
                                <label for="profile-quadril" class="block text-sm font-medium text-gray-700">Quadril</label>
                                <input type="number" id="profile-quadril" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-violet-500 focus:ring-violet-500 p-2" placeholder="Ex: 95" value="${u.medidas.quadril || ''}">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-8 text-center">
                    <p class="text-sm text-gray-500 mb-4">Seu ID de Usuário: <span class="font-mono text-xs">${userId || 'Carregando...'}</span></p>
                    <button id="save-profile-btn" class="btn-primary text-white py-3 px-8 rounded-lg font-bold flex items-center justify-center mx-auto">
                        <i data-lucide="save" class="w-5 h-5 mr-2"></i>Salvar Perfil
                    </button>
                    <p class="mt-4 text-sm text-gray-600">Seu Plano Atual: <span class="font-bold text-violet-700">${u.currentPlan}</span></p>
                </div>
            `;
        };

        const renderTipsPage = () => {
            const u = userProfile;
            const etnia = ETHNICITIES.find(e => e.value === u.etnia)?.label || 'Não Informada';
            const profileReady = u.name && u.altura && u.medidas.busto;

            if (!profileReady) {
                return `
                    <h2 class="luxury-header text-3xl font-bold mb-8 text-violet-800">Dicas Diárias Personalizadas</h2>
                    <div class="p-8 bg-amber-50 border-l-4 border-amber-500 rounded-lg text-amber-900">
                        <p class="font-semibold flex items-center mb-2"><i data-lucide="alert-triangle" class="w-5 h-5 mr-2"></i>Atenção: Perfil Incompleto</p>
                        <p>Para gerar dicas de alta qualidade, complete seu perfil com Nome, Altura, Medidas, Tipo de Pele e Tipo de Cabelo na aba "Meu Perfil".</p>
                    </div>
                    <div class="mt-6 text-center">
                        <button onclick="navigate('profile')" class="text-violet-600 hover:text-violet-800 font-medium flex items-center justify-center mx-auto"><i data-lucide="arrow-right" class="w-4 h-4 mr-1"></i>Ir para o Perfil</button>
                    </div>
                `;
            }

            return `
                <h2 class="luxury-header text-3xl font-bold mb-6 text-violet-800">Dicas Diárias Personalizadas</h2>
