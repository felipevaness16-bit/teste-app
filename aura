    <!-- Modal de Mensagem (Simula alert/confirm) -->
    <div id="message-modal" class="fixed inset-0 bg-gray-900 bg-opacity-75 z-50 flex items-center justify-center hidden">
        <div class="bg-white p-6 rounded-lg shadow-2xl max-w-sm w-full">
            <h3 id="modal-title" class="luxury-header text-xl font-bold mb-3 text-violet-800">Mensagem</h3>
            <p id="modal-body" class="mb-4 text-gray-600"></p>
