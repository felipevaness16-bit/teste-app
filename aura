    <!-- Carregamento do Tailwind CSS para um design luxuoso e responsivo -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Carregamento de Icones (Lucide) -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <!-- Configuração de cores e fonte personalizada para o tema de luxo -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Inter:wght@300;400;500;600;700&display=swap');
        :root {
            --color-primary: #4B0082; /* Deep Violet/Indigo */
            --color-accent: #EFC050; /* Gold */
            --color-background: #F8F8F8; /* Light Cream */
            --color-text: #333333;
        }
        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--color-background);
            color: var(--color-text);
        }
        .luxury-header {
            font-family: 'Playfair Display', serif;
            color: var(--color-primary);
        }
        .btn-primary {
            background-color: var(--color-primary);
            box-shadow: 0 4px 15px rgba(75, 0, 130, 0.4);
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .btn-primary:hover {
            background-color: #6a00c6;
            transform: translateY(-1px);
            box-shadow: 0 6px 20px rgba(75, 0, 130, 0.6);
        }
        .plan-card {
            border: 1px solid rgba(75, 0, 130, 0.1);
            transition: all 0.3s ease;
        }
        .plan-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(75, 0, 130, 0.15);
        }
        /* Estilos para o ícone de carregamento */
        .spinner {
            border-top-color: var(--color-accent);
            border-left-color: var(--color-primary);
            animation: spin 1s ease-in-out infinite;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        /* Melhoria para a navegação mobile (touch target size) */
        #nav-menu button, #mobile-drawer button {
            padding: 0.75rem 1rem; /* Maior área de toque */
            border-radius: 0.5rem;
        }
