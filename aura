            <button onclick="navigate('tips'); toggleMobileDrawer(false);" class="text-lg text-gray-700 hover:text-indigo-600 flex items-center"><i data-lucide="sparkles" class="w-5 h-5 mr-2"></i>Dicas Di√°rias</button>
            <button onclick="navigate('evolution'); toggleMobileDrawer(false);" class="text-lg text-gray-700 hover:text-indigo-600 flex items-center"><i data-lucide="trending-up" class="w-5 h-5 mr-2"></i>Evolu√ß√£o</button>
            <button onclick="navigate('look'); toggleMobileDrawer(false);" class="text-lg text-gray-700 hover:text-indigo-600 flex items-center"><i data-lucide="gem" class="w-5 h-5 mr-2"></i>Look do Dia (Aura)</button>
            <button onclick="navigate('plans'); toggleMobileDrawer(false);" class="text-lg text-gray-700 hover:text-indigo-600 flex items-center"><i data-lucide="credit-card" class="w-5 h-5 mr-2"></i>Planos</button>
