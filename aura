    <!-- Scripts de Firebase e L√≥gica do App -->
    <script type="module">
        // Importa√ß√µes do Firebase
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        // IMPORTANTE: Adicionado createUserWithEmailAndPassword
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged, signInWithEmailAndPassword, createUserWithEmailAndPassword } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, setDoc, onSnapshot, collection, query, addDoc, serverTimestamp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        import { setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // Global Variables MUST BE USED
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-aura-essencia-app-id';
        // CORRE√á√ÉO: Usando objeto vazio para garantir que o ambiente tente injetar as chaves v√°lidas.
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : {}; 
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

        let app, db, auth, userId = null;
        let isAuthReady = false;

        // Configura√ß√£o do Log do Firestore
        setLogLevel('Debug');

        // --- Fun√ß√µes de Login/Cadastro de Tela ---
        const showLogin = () => {
            document.getElementById('signup-form-content').classList.add('hidden');
            document.getElementById('login-form-content').classList.remove('hidden');
            document.getElementById('auth-subtitle').textContent = "Bem-vinda √† sua jornada de beleza e bem-estar.";
            lucide.createIcons();
        }

        const showSignup = () => {
            document.getElementById('login-form-content').classList.add('hidden');
            document.getElementById('signup-form-content').classList.remove('hidden');
            document.getElementById('auth-subtitle').textContent = "Crie sua conta para salvar seu progresso.";
            lucide.createIcons();
        }


        // Inicializa√ß√£o do Firebase e Autentica√ß√£o
        const initFirebase = async () => {
            try {
                // 1. Initialize App
                // A inicializa√ß√£o sempre deve ocorrer
                app = initializeApp(firebaseConfig);
                db = getFirestore(app);
                auth = getAuth(app);
                
                // 2. Auth Listener
                onAuthStateChanged(auth, async (user) => {
                    if (user) {
                        userId = user.uid;
                        isAuthReady = true;
                        // For demonstration, display the userId (important for multi-user rules)
                        console.log("Usu√°rio autenticado:", userId); 
                        // Esconde o login, mostra o app e carrega o perfil
                        showApp();
                        await loadUserProfile(); 
                        navigate('profile', false);
                    } else {
                        // Se n√£o houver usu√°rio autenticado, exibe a tela de login
                        document.getElementById('login-screen').classList.remove('hidden');
                        document.getElementById('app-navbar').classList.add('hidden');
                        document.getElementById('app-main').classList.add('hidden');
                        isAuthReady = true; // Permite a intera√ß√£o com a tela de login
                        
                        // NOVO FLUXO DE FALLBACK PARA GARANTIR O LOGIN AN√îNIMO:
                        if (initialAuthToken) {
                            try {
                                // Tenta login com token (prioridade)
                                await signInWithCustomToken(auth, initialAuthToken);
                            } catch (error) {
                                console.error("Erro durante o login com token, tentando an√¥nimo:", error);
                                // Se o token falhar, tenta o an√¥nimo como √∫ltimo recurso
                                await signInAnonymously(auth); 
                            }
                        } else {
                            // Se n√£o houver token, tenta imediatamente o login an√¥nimo
                            await signInAnonymously(auth);
                        }
                    }
                });
            } catch (error) {
                console.error("Erro na inicializa√ß√£o do Firebase:", error);
                showModal("Erro Fatal", "N√£o foi poss√≠vel inicializar o Firebase. Verifique a configura√ß√£o.");
                isAuthReady = true;
            }
        };

        const showApp = () => {
            document.getElementById('login-screen').classList.add('hidden');
            document.getElementById('app-navbar').classList.remove('hidden');
            document.getElementById('app-main').classList.remove('hidden');
            lucide.createIcons(); // Garante que os √≠cones do app sejam renderizados
        }

        // --- Fun√ß√µes de Login/Cadastro (Firebase) ---

        // FUN√á√ÉO DE CADASTRO (NOVA)
        const handleSignup = async () => {
            const email = document.getElementById('signup-email').value;
            const password = document.getElementById('signup-password').value;
            const signupBtn = document.getElementById('signup-btn');
            const signupIcon = document.getElementById('signup-icon');

            if (password.length < 6) {
                showModal("Erro de Cadastro", "A senha deve ter no m√≠nimo 6 caracteres.");
                return;
            }

            // Inicia o spinner
            signupIcon.classList.remove('data-lucide');
            signupIcon.classList.add('spinner', 'border-4', 'border-gray-200', 'rounded-full');
            signupBtn.disabled = true;

            try {
                // Tenta criar a nova conta no Firebase
                await createUserWithEmailAndPassword(auth, email, password);
                
                // Se for bem-sucedido, o onAuthStateChanged far√° o login e a navega√ß√£o.
                showModal("Sucesso!", "Conta criada com sucesso! Voc√™ est√° logado(a).");

            } catch (error) {
                // Resetar o bot√£o e √≠cone
                signupIcon.classList.add('data-lucide');
                signupIcon.classList.remove('spinner', 'border-4', 'border-gray-200', 'rounded-full');
                signupIcon.setAttribute('data-lucide', 'save');
                lucide.createIcons(); 
                signupBtn.disabled = false;
                
                let errorMessage = "Ocorreu um erro desconhecido durante o cadastro.";
                
                switch (error.code) {
                    case 'auth/email-already-in-use':
                        errorMessage = "Este e-mail j√° est√° em uso. Tente fazer login.";
                        break;
                    case 'auth/invalid-email':
                        errorMessage = "O endere√ßo de e-mail n√£o √© v√°lido.";
                        break;
                    case 'auth/weak-password':
                        errorMessage = "A senha √© muito fraca. Escolha uma senha mais forte.";
                        break;
                    case 'auth/api-key-not-valid': // Erro mais espec√≠fico da configura√ß√£o (mantido por seguran√ßa)
                        errorMessage = "Erro de Configura√ß√£o. A chave de API do Firebase n√£o √© v√°lida. (Tente novamente ou use o Acesso R√°pido.)";
                        break;
                    default:
                        errorMessage = `Erro de Cadastro: ${error.message}`;
                }
                showModal("Erro de Cadastro", errorMessage);
            }
        };

        const handleLogin = async () => {
            const email = document.getElementById('login-email').value;
            const password = document.getElementById('login-password').value;
            const loginBtn = document.getElementById('login-btn');
            const loginIcon = document.getElementById('login-icon');

            // Muda o √≠cone para spinner
            loginIcon.classList.remove('data-lucide');
            loginIcon.classList.add('spinner', 'border-4', 'border-gray-200', 'rounded-full');
            loginBtn.disabled = true;

            try {
                // Tenta logar o usu√°rio com e-mail e senha
                await signInWithEmailAndPassword(auth, email, password);
                // O listener onAuthStateChanged cuidar√° da navega√ß√£o
            } catch (error) {
                // Resetar o bot√£o imediatamente em caso de falha de autentica√ß√£o
                loginIcon.classList.add('data-lucide');
                loginIcon.classList.remove('spinner', 'border-4', 'border-gray-200', 'rounded-full');
                loginIcon.setAttribute('data-lucide', 'log-in');
                lucide.createIcons(); // Para redesenhar o √≠cone de login
                loginBtn.disabled = false;
                
                if (error.code === 'auth/invalid-credential' || error.code === 'auth/wrong-password' || error.code === 'auth/user-not-found') {
                    showModal("Login Falhou", "E-mail ou senha inv√°lidos. Verifique suas credenciais.");
                } else {
                     showModal("Erro de Login", `Ocorreu um erro: ${error.message}`);
                }
            } 
        };

        const signInAnon = async () => {
             try {
                await signInAnonymously(auth);
                // O listener onAuthStateChanged cuidar√° da navega√ß√£o
            } catch (error) {
                console.error("Erro no login an√¥nimo:", error);
                // Se houver erro aqui, provavelmente √© a chave de API novamente.
                showModal("Erro de Conex√£o", `N√£o foi poss√≠vel realizar o acesso r√°pido. Tente novamente mais tarde. Erro: ${error.message}`);
            }
        };

        
        // --- Vari√°veis de Estado do App ---
        let currentPage = 'profile';
        let userProfile = {
            name: '',
            etnia: 'pardo', // Default pardo
            pele: 'Normal', // Default Normal
            cabelo: 'Ondulado', // Default Ondulado
            altura: '', // Altura em cm
            medidas: { busto: '', cintura: '', quadril: '' },
            currentPlan: 'Gratuito'
        };

        const ETHNICITIES = [
            { label: 'Branco', value: 'branco' },
            { label: 'Preto', value: 'preto' },
            { label: 'Pardo', value: 'pardo' },
            { label: 'Ind√≠gena', value: 'indigena' },
            { label: 'Amarelo', value: 'amarelo' }
        ];

        const SKIN_TYPES = ['Normal', 'Seca', 'Oleosa', 'Mista', 'Sens√≠vel'];
        const HAIR_TYPES = ['Liso', 'Ondulado', 'Cacheado', 'Crespo'];
        let dailyEvolutionData = []; // Data for tracking

        // --- Fun√ß√µes de UI ---

        const showModal = (title, body) => {
            document.getElementById('modal-title').textContent = title;
            document.getElementById('modal-body').textContent = body;
            document.getElementById('message-modal').classList.remove('hidden');
        };

        const closeModal = () => {
            document.getElementById('message-modal').classList.add('hidden');
        };

        const toggleMobileDrawer = (open) => {
            const drawer = document.getElementById('mobile-drawer');
            if (open) {
                drawer.classList.remove('-translate-x-full');
            } else {
                drawer.classList.add('-translate-x-full');
            }
        };

        document.getElementById('menu-toggle').addEventListener('click', () => toggleMobileDrawer(true));
        document.getElementById('close-drawer').addEventListener('click', () => toggleMobileDrawer(false));


        // --- Fun√ß√µes de Firestore ---

        const getProfileDocRef = () => {
            if (!userId) throw new Error("Usu√°rio n√£o autenticado.");
            // Private path: /artifacts/{appId}/users/{userId}/profile/user_data
            return doc(db, `artifacts/${appId}/users/${userId}/profile`, 'user_data');
        };

        const getEvolutionCollectionRef = () => {
            if (!userId) throw new Error("Usu√°rio n√£o autenticado.");
            // Private path: /artifacts/{appId}/users/{userId}/evolution
            return collection(db, `artifacts/${appId}/users/${userId}/evolution`);
        };

        const loadUserProfile = () => {
             // Attach real-time listener for the profile document
             if (!isAuthReady || !userId) return;

             try {
                const profileRef = getProfileDocRef();
                onSnapshot(profileRef, (docSnap) => {
                    if (docSnap.exists()) {
                        const data = docSnap.data();
                        userProfile = {
                            ...userProfile,
                            ...data,
                            medidas: data.medidas || { busto: '', cintura: '', quadril: '' }
                        };
                        renderPage(currentPage); // Re-render the current page with new data
                        console.log("Perfil carregado com sucesso.");
                    } else {
                        console.log("Documento de perfil n√£o encontrado. Usando defaults.");
                    }
                }, (error) => {
                    console.error("Erro ao carregar o perfil em tempo real:", error);
                });
             } catch (e) {
                console.error("Erro ao configurar listener do perfil:", e);
             }
        };

        const saveProfile = async () => {
            if (!isAuthReady || !userId) {
                showModal("Erro de Autentica√ß√£o", "Por favor, aguarde o login ou tente novamente.");
                return;
            }

            // Get data from form inputs
            const profileData = {
                name: document.getElementById('profile-name').value,
                etnia: document.getElementById('profile-etnia').value,
                pele: document.getElementById('profile-pele').value,
                cabelo: document.getElementById('profile-cabelo').value,
                altura: parseInt(document.getElementById('profile-altura').value) || null,
                medidas: {
                    busto: parseInt(document.getElementById('profile-busto').value) || null,
                    cintura: parseInt(document.getElementById('profile-cintura').value) || null,
                    quadril: parseInt(document.getElementById('profile-quadril').value) || null,
                },
                currentPlan: userProfile.currentPlan
            };

            // Update local state and save to Firestore
            userProfile = { ...userProfile, ...profileData };

            try {
                const profileRef = getProfileDocRef();
                await setDoc(profileRef, userProfile, { merge: true });
                showModal("Sucesso!", "Seu perfil foi atualizado com sucesso!");
                renderPage('profile');
            } catch (e) {
                console.error("Erro ao salvar o perfil:", e);
                showModal("Erro ao Salvar", "Ocorreu um erro ao salvar seus dados. Tente novamente.");
            }
        };

        const loadDailyEvolution = () => {
            if (!isAuthReady || !userId) return;

            try {
                const evolutionRef = getEvolutionCollectionRef();
                const q = query(evolutionRef); // No orderBy to avoid index issues.

                onSnapshot(q, (snapshot) => {
                    const data = [];
                    snapshot.forEach(doc => {
                        data.push({ id: doc.id, ...doc.data() });
                    });
                    // Sort data by date in memory (most recent first)
                    dailyEvolutionData = data.sort((a, b) => b.timestamp.toMillis() - a.timestamp.toMillis());
                    renderPage(currentPage);
                }, (error) => {
                    console.error("Erro ao carregar evolu√ß√£o di√°ria em tempo real:", error);
                });
            } catch (e) {
                console.error("Erro ao configurar listener de evolu√ß√£o:", e);
            }
        };

        const addDailyEvolution = async () => {
            if (!isAuthReady || !userId) {
                showModal("Erro", "Usu√°rio n√£o autenticado. Por favor, aguarde o carregamento.");
                return;
            }

            const skinQuality = document.getElementById('skin-quality').value;
            const hairQuality = document.getElementById('hair-quality').value;
            const notes = document.getElementById('daily-notes').value;

            const entry = {
                skinQuality: skinQuality,
                hairQuality: hairQuality,
                notes: notes,
                timestamp: serverTimestamp()
            };

            try {
                await addDoc(getEvolutionCollectionRef(), entry);
                showModal("Registro Adicionado", "Seu progresso di√°rio foi salvo!");
                // Clear form
                document.getElementById('skin-quality').value = '3';
                document.getElementById('hair-quality').value = '3';
                document.getElementById('daily-notes').value = '';
            } catch (e) {
                console.error("Erro ao adicionar registro di√°rio:", e);
                showModal("Erro", "Falha ao salvar o registro di√°rio.");
            }
        };

        // --- Fun√ß√µes de Navega√ß√£o e Renderiza√ß√£o ---

        const navigate = (page, runLoaders = true) => {
            currentPage = page;
            renderPage(page, runLoaders);
            // Re-render Lucide icons on page change
            lucide.createIcons();
        };

        const renderPage = (page, runLoaders = true) => {
            const container = document.getElementById('content-container');
            container.innerHTML = `<h2 class="luxury-header text-3xl font-bold mb-6 text-violet-800">Carregando...</h2>`;

            if (!isAuthReady) {
                container.innerHTML = `<div class="text-center p-10">
                    <div class="spinner border-4 border-gray-200 rounded-full w-10 h-10 inline-block"></div>
                    <p class="mt-4 text-gray-500">Aguardando autentica√ß√£o e carregamento de dados...</p>
                </div>`;
                return;
            }

            switch (page) {
                case 'profile':
                    container.innerHTML = renderProfilePage();
                    // Attach event listener for saving
                    document.getElementById('save-profile-btn').addEventListener('click', saveProfile);
                    break;
                case 'tips':
                    container.innerHTML = renderTipsPage();
                    break;
                case 'evolution':
                    container.innerHTML = renderEvolutionPage();
                    if (runLoaders) loadDailyEvolution();
                    // Attach event listener for adding daily entry
                    document.getElementById('add-daily-entry-btn')?.addEventListener('click', addDailyEvolution);
                    
                    // NEW: Attach listeners for range slider updates
                    const skinRange = document.getElementById('skin-quality');
                    const skinValue = document.getElementById('skin-value');
                    if (skinRange && skinValue) {
                        skinRange.oninput = (e) => skinValue.textContent = e.target.value;
                    }
                    
                    const hairRange = document.getElementById('hair-quality');
                    const hairValue = document.getElementById('hair-value');
                    if (hairRange && hairValue) {
                        hairRange.oninput = (e) => hairValue.textContent = e.target.value;
                    }

                    break;
                case 'look':
                    container.innerHTML = renderLookDoDiaPage();
                    document.getElementById('generate-look-btn')?.addEventListener('click', simulateAILook);
                    break;
                case 'plans':
                    container.innerHTML = renderPlansPage();
                    break;
                default:
                    container.innerHTML = `<h2 class="luxury-header text-3xl font-bold mb-6 text-violet-800">P√°gina N√£o Encontrada</h2>`;
            }

            // Ensure Lucide icons are rendered after HTML injection
            lucide.createIcons();
        };

